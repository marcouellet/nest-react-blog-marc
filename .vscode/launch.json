{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program",
            "program": "${workspaceFolder}/blog-backend/src/main.ts",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Marc Nest Blog Backend",
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\blog-backend\\src\\main.ts",
            "cwd": "${workspaceFolder}\\blog-backend",
            "runtimeArgs": [
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register"
            ],
            "sourceMaps": true,
            "envFile": "${workspaceFolder}\\blog-backend\\.env",
            "console": "integratedTerminal",
        },
        {
            "name": "Marc Nest Blog FrontEnd-Axios",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}\\blog-frontend-axios\\src",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "envFile": "${workspaceFolder}\\blog-frontend-axios\\src\\.env",
            "console": "integratedTerminal",
        },
        {
            "name": "Debug Backend Jest Tests",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
              "--inspect-brk",
              "${workspaceRoot}/blog-backend/node_modules/jest/bin/jest.js",
              "--runInBand"
            ],
            "args": [
                "-c",
                "./test/jest.json",
            ],
            "cwd": "${workspaceFolder}\\blog-backend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229
        },
        {
            "name": "Debug Backend Jest E2E Tests",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
              "--inspect-brk",
              "${workspaceRoot}/blog-backend/node_modules/jest/bin/jest.js",
              "--runInBand"
            ],
            "args": [
                "-c",
                "./test-e2e/jest-e2e.json",
            ],
            "cwd": "${workspaceFolder}\\blog-backend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229
        }
    ]
}