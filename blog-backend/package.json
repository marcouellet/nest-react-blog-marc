{
  "name": "blog-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "postbuild": "npm run build-env",
    "build-env": "cp .env ./dist/blog-backend/.env",
    "build-env-docker": "cp .env.docker ./",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/blog-backend/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest --config test/jest.json",
    "test:watch": "jest --config test/jest.json --watch",
    "test:cov": "jest --config test/jest.json --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --watchAll --runInBand --detectOpenHandles",
    "test:e2e": "jest --config test-e2e/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/class-transformer": "^0.4.0",
    "@nestjs/class-validator": "^0.13.4",
    "@nestjs/common": "^8.4.4",
    "@nestjs/core": "^8.4.4",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/mapped-types": "^1.0.1",
    "@nestjs/mongoose": "^9.0.3",
    "@nestjs/passport": "^8.2.1",
    "@nestjs/platform-express": "8.0.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cli-color": "^2.0.2",
    "dotenv": "^8.2.0",
    "express-jwt": "^5.3.1",
    "http-status-codes": "^2.2.0",
    "jwks-rsa": "^1.6.0",
    "jwt-decode": "^3.1.2",
    "mongoose": "^6.3.0",
    "ms-typescript": "^2.0.0",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^7",
    "tsconfig-paths": "4.1.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.5",
    "@nestjs/schematics": "^8.0.10",
    "@nestjs/testing": "^8.4.4",
    "types/cli-color": "^2.0.2",
    "types/express": "^4.17.1",
    "types/jest": "^27.0.0",
    "types/mockingoose": "^2.13.0",
    "types/node": "^18.6.4",
    "types/passport-jwt": "^3.0.6",
    "types/passport-local": "^1.0.34",
    "types/sinon-mongoose": "^1.3.11",
    "types/supertest": "^2.0.8",
    "acorn": "^8.8.0",
    "jest": "^28.0.0",
    "mockingoose": "^2.13.1",
    "prettier": "^1.18.2",
    "sinon-mongoose": "^2.3.0",
    "supertest": "^4.0.2",
    "ts-jest": "^28.0.3",
    "ts-loader": "^6.1.1",
    "ts-node": "^9.1.1",
    "ts-sinon": "^2.0.2",
    "tsconfig-paths": "^3.9.0",
    "eslint":"^8.21.0",
    "typescript": "^4.0.0"
  },
  "jest": {
    "moduleNameMapper": {
      "^@Shared/(.*)$": "../blog-frontend/src/shared/$1",
      "^@Modules/(.*)$": "../blog-backend/src/modules/$1",
      "^@Controllers/(.*)$": "../blog-backend/src/controllers/$1",
      "^services/api/(.*)$": "../blog-backend/src/services/$1",
      "^@Mongo/(.*)$": "../blog-backend/src/frameworks/data/mongo/$1"
    }
  }
}
