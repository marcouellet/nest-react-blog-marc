{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "paths": {
      "@Shared/*": ["../blog-frontend/src/shared/*"],
      "@Config/*": ["./src/config/*"],
      "@Controllers/*": ["./src/controllers/*"],
      "services/api/*": ["./src/services/*"],
      "@Guards/*": ["./src/auth/guards/*"],
      "@Repositories/*": ["./src/core/repositories/*"],
      "@Modules/*": ["./src/modules/*"],
      "@Mongo/*": ["./src/frameworks/data/mongo/*"],
    },
  },
  "exclude": ["node_modules", "dist"],
  "references": [
    {
        "path": "../blog-frontend"
    }
  ],
}
